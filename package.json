{
  "name": "formulasnap",
  "private": true,
  "version": "0.1.0",
  "description": "Capture and recognize LaTeX formulas from screen",
  "author": "FormulaSnap Team",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "vite build && tsc -p tsconfig.electron.json && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "image-js": "^1.3.0",
    "katex": "^0.16.9",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-katex": "^3.0.1"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.formulasnap.app",
    "productName": "FormulaSnap",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signAndEditExecutable": false,
      "sign": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.ico"
    }
  }
}